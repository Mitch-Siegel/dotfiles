#include "print.h"

//#include "math.h"


fun print(uint8 value->void)
{
	// store r0, pull the argument into a register, then output that register
	asm {
		movb %r0, (%bp+8)
		out 0, %r0
	}
	;
}

fun printCheat(uint32 value->void)
{
	asm {
		mov %r0, (%bp+8)
		out 1, %r0
	}
	;
}

fun printStr(uint8 *str->void)
{
	uint32 i = 0;
	while(str[i] != 0)
	{
		print(str[i]);
		i = i + 1;
	}
}

