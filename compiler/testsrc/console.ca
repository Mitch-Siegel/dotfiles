fun cheat(uint32 val->void) asm
{
    mov %rr, (%bp+8)
    out 1, %rr
}

fun cheatp(uint32 *val->void) asm
{
    mov %rr, (%bp+8)
    out 1, %rr
}

fun setupConsole(->void)
{
    cursX = 0;
    cursY = 0;
}

fun regDup(->void) asm
{
    mov %r8, %r0
    mov %r9, %r1
    mov %r10, %r2
    mov %r11, %r3
    mov %r12, %r4
}

fun print(uint8 c->void)
{
    uint8 *screenMem = 1280;
    uint16 netOffset = 0;
    if(c == 10)
    {
        cursY += 1;
        cursX = 0;
    }
    else
    {
        netOffset = cursY * 80;
        netOffset += cursX;
        regDup();
        screenMem[netOffset] = c;
        cursX += 1;
    }
    //regDup();
}