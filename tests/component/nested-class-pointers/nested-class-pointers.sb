#include "tests-common.sb"

class Money
{
    u32 dollars;
    u8 cents;
};

class Account
{
    u8 *name;
    Money amount;
    Account *me;
};

class AccountWithPointer
{
    u8 *name;
    Money *amount;
    AccountWithPointer *me;
};

fun PrintMoney(Money *m)
{
    uart_putc('$');
    printNum(m->dollars);
    uart_putc('.');
    printNum(m->cents);
}

fun PrintAccountWithPointer(AccountWithPointer *a)
{
    PrintMoney(a->amount);
}

fun TestAccount()
{
    Account a1;
    a1.amount.dollars = 1234;
    a1.amount.cents = 56;

    PrintMoney(&a1.amount);
}

fun TestAccountWithPointer()
{
    Money m1;
    m1.dollars = 9999;
    m1.cents = 99;

    AccountWithPointer a2;
    a2.amount = &m1;

    PrintMoney(a2.amount);
    PrintAccountWithPointer(&a2);
}

fun VerifyMemberIdenties()
{
    Account a1;
    a1.me = &a1;
    a1.amount.dollars = 5678;
    a1.amount.cents = 90;

    u32 pointer1 = &a1;
    if((&a1) == (a1.me))
    {
        uart_putc('=');
    }
    else
    {
        uart_putc('!');
    }
    uart_putc(10);

    if(&(a1.amount) == &(a1.me->amount))
   {
        uart_putc('=');
    }
    else
    {
        uart_putc('!');
    }
    uart_putc(10);

    PrintMoney(&a1.amount);
    PrintMoney(&(a1.me->amount));
}

fun main()
{
    TestAccount();
    TestAccountWithPointer();
    VerifyMemberIdenties();
    exit();
}
