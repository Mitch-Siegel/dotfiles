#include "tests-common.sb"

fun printDuplicateStrings()
{
    u8 *string = (u8 *)"the quick brown fox jumps over the lazy dog";
    printStr(string);
    putc('\n');
    string = (u8 *)"some other string with wacky characters: !@#$%^&*()_+[;]";
    printStr(string);
    putc('\n');
    string = (u8 *)"the quick brown fox jumps over the lazy dog";
    printStr(string);
    putc('\n');
}

// tests string literals declared at more deeply nested scopes
fun printIsEven(u8 number)
{
    printHex(number, 0);
    putc(':');
    if(number % 2 == 0)
    {
        printStr("even");
    }
    else
    {
        printStr("odd");
        if(number % 3 == 0)
        {
            printStr("fizz");
        }
        if(number % 5 == 0)
        {
            printStr("buzz");
        }
    }
    putc('\n');
}


fun main()
{
    printStr((u8 *)"Hello, world!");
    putc('\n');
    printDuplicateStrings();
    u8 i = 0;
    while(i < 16)
    {
        printIsEven(i);
        i += 1;
    }
    exit();
}
